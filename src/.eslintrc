---
parser: babel-eslint
extends:
- google
- eslint:recommended
- plugin:react/recommended
- prettier
- prettier/react
- plugin:import/errors
- plugin:import/warnings
plugins:
- import
- react
settings:
  react:
    version: 16.5.2
parserOptions:
  ecmaVersion: 2016
  sourceType: module
  ecmaFeatures:
    jsx: true
env:
  browser: true
  es6: true
  node: true
  jest: true
rules:
  no-inner-declarations: 0
  valid-jsdoc: 0
  require-jsdoc: 0
  quotes:
  - error
  - single
  consistent-return: 2
  jsx-quotes:
  - error
  - prefer-single
  semi:
  - error
  - never
  object-curly-spacing:
  - error
  - always
  comma-dangle:
    - error
    - never
  react/display-name: 0
  react/prop-types: 2
